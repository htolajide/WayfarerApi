{
  "name": "WayfareApi",
  "version": "1.0.0",
  "description": "A transport booking app back-end API development",
  "main": "app.js",
  "scripts": {
    "build": "babel src --out-dir dist --copy-files",
    "clean": "rm -rf dist && mkdir dist",
    "heroku-postbuild": "npm run clean && npm run build",
    "start": "SET NODE_ENV=dev && node dist/app.js",
    "start:dev": "nodemon --exec babel-node src/app.js",
    "create-tables": "node ./src/models/tables tables",
    "test": "mocha --timeout 10000"
  },
  "author": "Hammed Taofeek",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "jsend": "^1.1.0",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "morgan": "^1.9.1",
    "pg": "^7.11.0" 
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
    "@babel/node": "^7.5.0",
    "@babel/preset-env": "^7.5.2",
    "babel-eslint": "^10.0.2",
    "eslint": "^6.0.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^10.2.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "nodemon": "^1.19.1"
  }
}
